{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "indent": ["error", 4],
        "react/react-in-jsx-scope": "off"
    }
}
